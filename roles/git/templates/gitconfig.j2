[user]
  name = {{ user }}
  email = {{ email }}
[merge]
  tool = vimdiff
[alias]
  b = branch --sort=-committerdate --column
  br = branch --sort=-committerdate --column -r
  aa = add .
  ci = commit
  co = checkout
  slog = log --pretty=format:'%C(white)[%C(yellow)%h%C(white)] %C(blue)(%ad) %C(white)%s %C(green)%an' --date=local
  glog = log --graph --pretty=format:'%C(white)[%C(yellow)%h%C(white)] %C(blue)(%ad) %C(white)%s %C(green)%an' --abbrev-commit
  st = status -s
  blame = blame -w
  wtf = blame -w
  staged = diff --cached
  pr = pull-request
  amend = commit -a --amend
[core]
  excludesfile = ~/.gitignore
  preloadindex = true
  editor = vim
  mergeoptions = --no-edit
  pager = cat
[github]
  user = {{ github_user }}
[hub]
  protocol = ssh
[push]
  default = upstream
